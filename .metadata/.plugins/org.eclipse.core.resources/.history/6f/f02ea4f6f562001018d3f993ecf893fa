	public void testOnHCantFindRidePage() throws InterruptedException {
		boolean isNoRideShown = driver.findElement(
			    By.xpath("//android.widget.TextView[@text='Sorry! We couldn‚Äôt find a ride for you.']")
			).isDisplayed();

			if (isNoRideShown) {
			    System.out.println("‚ö†Ô∏è Ride search failed ‚Äî No ride available.");
			}
	}



